<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtOperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="8dp"
                android:height="50dp"
                android:background="@null"
                android:gravity="right|center"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="@+id/edtOperation"
                app:layout_constraintTop_toBottomOf="@+id/edtOperation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:rowCount="5">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="CE"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="+"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="%"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="รท"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="ร"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="-"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="+"
                android:textColor="@color/colorOrange"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnZero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:onClick="buttonsOnClick"
                android:text=","
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:drawableStart="@drawable/icons8_clear_symbol_30px"
                android:drawableTint="@color/colorOrange"
                android:onClick="buttonsOnClick"
                android:paddingStart="35dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@color/colorWhite"
                android:backgroundTint="@color/colorOrange"
                android:onClick="buttonsOnClick"
                android:text="="
                android:textColor="@color/colorWhite"
                android:textSize="24sp" />
        </GridLayout>
    </LinearLayout>

</LinearLayout>